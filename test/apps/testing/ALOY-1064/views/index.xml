			<ListView>
				<Templates>
					<ItemTemplate name="first">
						<Label id="title" bindId="title"/>
					</ItemTemplate>

					<ItemTemplate name="second">
						<Label id="title" bindId="title"/>
						<Label id="subtitle" bindId="subtitle"/>
					</ItemTemplate>

					<ItemTemplate name="third">
						<ImageView id="leftImage" bindId="leftImage"/>
