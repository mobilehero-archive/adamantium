<Alloy>
	<Model src="book"/>
	<Window class="container" layout="vertical" top='20'>
		<Label>{book.title}</Label>
		<Label>Written by {book.author}</Label>
		<Label text="- Reading List -" />
		<Label text="{book.title}" />
		<Label text="Written by {book.author}" />
		<Label text="Title: {book.title}, by {book.author} :)" />
		<TableView id="tableview" dataCollection="book" top="30">
			<TableViewRow id="row">
				<Label class="rowName" text="{title}, by {author}" />
			</TableViewRow>
		</TableView>
	</Window>
</Alloy>
