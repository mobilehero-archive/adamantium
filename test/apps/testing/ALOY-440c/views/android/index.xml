<Alloy>
	<Collection src="book"/>
	<Window backgroundColor="white" exitOnClose="true">
		<Menu>
			<MenuItem title="Add" onClick="doClick" showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS" />
		</Menu>
		<Picker top="0">
			<Column dataCollection="book">
				<Row title="{title}"/>
			</Column>
		</Picker>

		<TableView dataCollection="book" top="100">
			<TableViewRow title="{title}"/>
		</TableView>
		<Label>Click the ActionBar icon to add a row</Label>
    </Window>
</Alloy>
